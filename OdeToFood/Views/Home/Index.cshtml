@model OdeToFood.ViewModels.HomePageViewModel



<h1>Welcome!</h1>

    <div>This is the home page</div>
    <hr/>
<table >
    @foreach (var restaur in Model.Restaurants)
    {
        <tr>
            <td>Restaurant: </td>
            @*<td> <a href="/home/details/@restaur.Id"> @restaur.Name</a></td>*@ 
            <td>
                <a asp-controller="Home" asp-action="Details" asp-route-id="@restaur.Id">@restaur.Name !!</a>
                <a asp-action="Edit" asp-route-id="@restaur.Id">Edit</a>
            </td>
        </tr>
    }
</table>
    
<a asp-controller="Home" asp-action="Create">Create</a>
@section _footer
{
    <h2>@Model.CurrentMessage</h2>
}
